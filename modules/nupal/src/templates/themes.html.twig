{% extends env.VIEWS_PATH_RELATIVE ~ '/' ~ req.theme ~ '/base.html.twig' %}
{% block title %}{{ req.routing.defaults._title }}{% endblock %}
{% block body %}

    <form action="/nupal/themes" method="POST">
        {% for theme in allThemes %}

            <button
                class="btn {% if req.theme == theme %} btn-success {% endif %}"
                name="{{ theme }}"
                value="{{ theme }}"
                type="submit"
            >
                {{ theme }}

            </button>

        {% endfor %}
    </form>

{% endblock %}
